{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{# ... #}
{% block title %}Connexion{% endblock %}

{# ... #}
{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-6">
                <div class="panel panel-login">
                    <div class="panel-heading d-flex justify-content-center">
                        <h2>Connexion</h2>
                    </div>
                    <hr>
                    <div class="panel-body">
                        {% if error %}
                            <div class="alert alert-danger">
                                {{ error.messageKey }}
                            </div>
                        {% endif %}
                        <form id="login-form" action="{{ path('login') }}" method="post" role="form" style="display: block;">
                            <div class="form-group">
                                <label for="username">Email utilisateur :</label>
                                <input type="email" name="_username" id="username" tabindex="1" class="form-control" placeholder="example@email.com" value="{{ last_username }}" required>
                                <label for="password">Mot de passe :</label>
                                <input type="password" name="_password" id="password" tabindex="2" class="form-control" placeholder="Password" required>
                            </div>
                            <div class="form-group d-flex justify-content-center m-3">
                                <input type="submit" name="login-submit" id="login-submit" tabindex="3" class="form-control btn btn-success" value="Se connecter">
                            </div>
                            <div class="form-group d-flex justify-content-center">
                                <a href="/register" id="register-form-link" class="btn btn-info">Cr√©er un compte</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}