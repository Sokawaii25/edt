{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{# ... #}
{% block title %}Créer un compte{% endblock %}

{# ... #}
{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-6">
                <div class="panel panel-register">
                    <div class="panel-heading d-flex justify-content-center">
                        <h2>Créer un compte</h2>
                    </div>
                    <hr>
                    <div class="panel-body d-block">
                        {{ form_start(registrationForm) }}
                            <div class="form-group">
                                {{ form_label(registrationForm.email, 'Email :') }}
                                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                                <small>{{ form_help(registrationForm.email) }}</small>
                            </div>
                            <div class="form-group">
                                {{ form_label(registrationForm.plainPassword, 'Mot de passe :') }}
                                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                                <small>{{ form_help(registrationForm.plainPassword) }}</small>
                            </div>
                            <div class="form-group d-flex justify-content-center m-3">
                                <input type="submit" name="register-submit" id="register-submit" class="form-control btn btn-success" value="Créer le compte">
                            </div>

                            <div class="form-group d-flex justify-content-center">
                                <a href="/login" id="register-form-link" class="btn btn-info">Se connecter</a>
                            </div>
                        {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


